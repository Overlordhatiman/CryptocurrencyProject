<Window x:Class="CryptocurrencyProject.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptocurrencyProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding Data}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding id}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding symbol}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding currencySymbol}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding type}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding rateUsd}" Margin="0,0,0,5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
